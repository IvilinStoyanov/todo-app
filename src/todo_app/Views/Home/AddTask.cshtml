<div class="container-fluid">
    <form>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" class="form-control" id="Description" aria-describedby="Description" placeholder="Enter description" ng-model="model.task.Description">
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            <select class="form-control" id="Status" ng-model="model.task.Status">
                <option>Pending</option>
                <option>Active</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Deadline">Deadline</label>
            <div class=" input-group date" datepicker> 
                <input type="text" class="form-control" ng-model="model.task.Deadline">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-calendar"></i>
                </span>
            </div>
        </div>
        <button type="button" class="btn btn-primary" ng-click="model.savedata()">Add</button>
    </form>
</div>
