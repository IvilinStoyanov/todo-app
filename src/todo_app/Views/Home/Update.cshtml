<script type="text/ng-template" id="updateTaskModal.html">
    <div class="model-content">
        <div class="modal-header">
            <h3 class="modal-title">Edit Task</h3>
        </div>
        <div class="modal-body">
            <form name="update">
                <div class="form-group">
                    <label for="Description">Description</label>
                    <input type="text" class="form-control" id="Description" aria-describedby="Description" ng-model="modal.task.Description" required>
                </div>
                <div class="form-group">
                    <label for="Status">Status</label>
                    <select class="form-control" id="Status" ng-model="modal.task.Status" required>
                        <option>Accepted</option>
                        <option>Denied</option>
                        <option>Pending</option>
                        <option>Completed</option>
                        <option>Active</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Deadline">Deadline</label>
                    <div class=" input-group date" datepicker>
                        <input type="text" id="deadline" class="form-control" ng-model="modal.task.DeadlineUpdate" required>
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-calendar"></i>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-disabled="update.$invalid" ng-click="modal.edit(modal.task.Id)">Edit</button>
            <button class="btn btn-warning" type="button" ng-click="modal.cancel()">Cancel</button>
        </div>
    </div>
</script>


