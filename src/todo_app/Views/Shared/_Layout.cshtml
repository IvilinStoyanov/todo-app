<!DOCTYPE html>
<html ng-app="taskApp">
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

</head>
<body>
    <!-- main wrapper -->
    <div class="wrapper">
        <div class="sidebar">
            <!-- side menu wrapper -->
            <div class="side-menu-wrapper">
                <!-- logo -->
                <div class="logo">
                    <a href="#" class="simple-text">
                        Task Manager
                    </a>
                </div>
                <!-- menu elements -->
                <ul class="nav">
                    <li>
                        <a href="/Home/Add">
                            <ion-icon class="side-menu-icons" name="clipboard"></ion-icon>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Add">
                            <ion-icon class="side-menu-icons" name="analytics"></ion-icon>
                            <p>Add</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Tasks">
                            <ion-icon class="side-menu-icons" name="add"></ion-icon>
                            <p>Tasks</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/angular-loader.js"></script>
    <script src="~/Scripts/angular/ng-main-controller.js"></script>
    <script src="~/Scripts/angular/app.config.js"></script>
    <script src="~/Scripts/angular/directives/common.directives.js"></script>
    <script src="~/Scripts/angular/filters/task-app.filter.js"></script>
    <script src="~/Scripts/angular/components/task-add/task-add.component.js"></script>
    <script src="~/Scripts/angular/components/task-list/task-list.component.js"></script>
    <script src="https://unpkg.com/ionicons@4.5.5/dist/ionicons.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.3.3.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>


